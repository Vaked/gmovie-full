{% extends 'layouts/base.html.twig' %}
{% block cssvendors %}
<link href="{{ asset('web/vendors/animate.css/animate.min.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
<div class="x_panel">
    <div class="x_content">
    <h3>Edit Profile</h3>
        <br>
        <div class="login_wrapper">
                <section class="login_content">
                    {{ form_start(form, {'attr': {'class':'needs-validation','novalidate': 'novalidate', 'id': 'resetPassword'}})
                    }}
                    <h1>Change Password</h1>
                    {% if errors is defined and errors is not empty %}
                    {% for error in errors %}
                    <div class="alert alert-danger">
                        {{ error.message }}
                    </div>
                    {% endfor %}
                    {% endif %}
                    {% if error is defined and error is not empty %}
                    <div class="alert alert-danger">{{ error }}</div>
                    {% endif %}
                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                        {{ form_row(form.plainPassword.first) }}
                        {{ form_errors(form.plainPassword) }}
                    </div>
                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                        {{ form_row(form.plainPassword.second) }}

                    </div>
                    {{ form_widget(form.save, { 'label': 'Save' }) }}
                    <div class="clearfix"></div>
                    {{ form_end(form) }}
                </section>
            </div>
    </div>
</div>
{% endblock %}
{% block jsvendors %}
<script src="{{ asset('web/vendors/momentjs/moment.min.js') }}"></script>
<script src="{{ asset('web/vendors/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js') }}"></script>
<script src="{{ asset('web/vendors/validator/validator.js') }}"></script>
<script src="{{ asset('web/customjs/form-init.js') }}"></script>
{% endblock %}
{% block customjs %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js"></script>
{% endblock %}