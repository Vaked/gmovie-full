{% extends 'admin/index.html.twig' %}
{% block admin %}

{{ form_start(formAchievement, {'attr': {'class':'needs-validation','novalidate': 'novalidate', 'id': 'rule-form'}})
}}
<div class="x_title">
    <h3>Rule:</h3>
</div>
<div class="col-md-12 col-sm-12  form-group has-feedback">
    {{ form_row(formAchievement.name, {'value': rule.getName ?? null}) }}
    {{ form_errors(formAchievement.name) }}
</div>
<div id="rule_container">
    {% for rule in rule.getRule %}
        <div class='rule'><div class='col-md-12 col-sm-12  form-group has-feedback'>
    <div><input type='number' name='achievement[rule][{{loop.index}}][count]' required='required' class='form-control' placeholder='Count*' value='{{rule.count}}'>
    </div>
    </div>
    <div class="col-md-6 col-sm-6  form-group has-feedback">     
    <div><select name="achievement[rule][{{loop.index}}][type]" class="form-control valid" aria-invalid="false"><option value='{{rule.type}}' selected="selected">{{rule.type}}</option><option value="Genre">Genre</option><option value="Director">Director</option><option value="Year">Year</option></select></div></div>    
    <div class='col-md-6 col-sm-6  form-group has-feedback'>
    <div><input type='text' name='achievement[rule][{{loop.index}}][value]' class='form-control' placeholder='Type Value' value='{{rule.value}}'></div>
    </div>
    <div class="col-md-12 col-sm-6  form-group has-feedback">
    <a href="javascript:;" class="remove-rule" title="Add a rule"><i style="color:red"
            class="fa fa-minus-circle"></i></a>
    </div>
    </div>

    {% endfor %}
</div>
<div class="col-md-12 col-sm-6  form-group has-feedback">
    {{ form_widget(formAchievement.save, { 'label': 'Save' }) }}
    {{ form_end(formAchievement) }}
</div>

{% endblock %}