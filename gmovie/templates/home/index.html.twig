{% extends 'layouts/base.html.twig' %}
{% block body %}
<div class="x_panel">
  <div class="x_content">
    <div class="x_title">
      <h3>Movies
        {% if movies is empty %}
        (Your bucket list is currently empty)
        {% endif %}
      </h3>
    </div>
    {% include 'movie/movies.html.twig' %}
    <td>
      <a href="{{ absolute_url(path('fill_bucket')) }}" class="btn btn-primary btn-xs">Get movie recommendations </a>
    </td>
  </div>
</div>

<div class="modal" tabindex="-1" role="dialog" style="display: none" id="achievementNotify">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="achievementName"></p>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block customjs %}
<script src="{{ asset('web/customjs/scripts.js') }}"></script>
{% endblock %}

