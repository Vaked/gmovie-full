{% extends 'layouts/base.html.twig' %}
{% block pagetitle %}
<div class="page-title">
    <div class="title_left">
        <h3>Lets Get Started</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5  form-group pull-right top_search">
            <div class="input-group">
                <input id="searchApi" type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button id="searchApiGo" class="btn btn-default" type="button">Search</button>
                </span>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block body %}
<div class="x_panel">
    <div class="x_content">
        <div class="x_title">
            <h3>Please select <b id="movie_count">{{ moviesLeft  }}</b> movies!</h3>
        </div>

        <div id="getStartedMovies"><h4>No Movies Found</h4></div>

    </div>
</div>
{% endblock %}
{% block customjs %}
<script src="{{ asset('web/customjs/scripts.js') }}"></script>
{% endblock %}