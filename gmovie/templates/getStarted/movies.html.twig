{% for movie in movies %}
{% if movie.getPosterPath != "N/A" %}
<div class="movieCard col-sm-6 col-md-4 col-lg-3">
<div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{ movie.getTitle is defined ? movie.getTitle : 'N/A'  }}</h5>
                <p class="card-text"><img class="img-thumbnail" src="{{ movie.getPosterPath is defined ? movie.getPosterPath : asset('web/images/default-poster.jpg') }}"
                        alt=""></p>
                <button data-id="{{movie.getId}}" class="addMovie btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></button>
            </div>
        </div>
</div>
{% endif %}
{% endfor %}