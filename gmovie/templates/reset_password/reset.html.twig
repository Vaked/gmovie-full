{% extends 'layouts/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="login_wrapper">
    <div class="form reset_password_form">
        <section class="login_content">
            <form method="post" id="user_reset_password">
                <h1>Reset your password</h1>
                {{ form_start(resetForm) }}
                 {% if error is defined and error is not empty %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                 {{ form_row(resetForm.plainPassword) }}
                {{ form_errors(resetForm.plainPassword) }}
                 <button class="btn btn-secondary btn-sm submit">Reset password</button>
                {{ form_end(resetForm) }}
            </form>
        </section>
    </div>
</div>
{% endblock %}

{% block customjs %}
<script src="{{ asset('web/customjs/form-init.js') }}"></script>
{% endblock %}